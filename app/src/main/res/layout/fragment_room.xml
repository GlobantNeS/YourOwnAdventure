<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.kaineras.yourownadventure.RoomFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/room"
        android:contentDescription="@string/text_img_room" />

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/text_room"
        android:layout_gravity="center"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:textSize="@dimen/abc_text_size_large_material"
        android:background="#84000000" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_gravity="left|bottom"
        android:src="@drawable/door1"
        android:background="#00ffffff"
        android:contentDescription="@string/img_button_door_left" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:layout_gravity="right|bottom"
        android:src="@drawable/door2"
        android:background="#00ffffff"
        android:contentDescription="@string/img_button_door_right" />

</FrameLayout>
